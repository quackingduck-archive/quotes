- title = "Quotes I Like for a Variety of Reasons"
!!!
%html{html_attrs}
  %head
    %title= title
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %style{:type => 'text/css'}
      :sass
        *
          :margin 0
          :padding 0
          
        body
          :font-size 76%
          :line-height 20px
          :font-family Georgia, serif
          :width 500px
          :margin 20px auto
        
        a
          :color black
        
        .title
          :font-size 200%
          :font-weight bold
          :margin-bottom 40px
        
        .quote
          :margin 30px 0
          
          p
            :margin 15px 0
          
          .body
            :font-size 140%
            :line-height 30px
          .author
            :display block
            :margin-top 30px
            :text-align right
            :border-top 1px solid #ccc
            .name
              :font-size 120%
              :float right
              :margin-top -15px
              :background white
              :padding-left 1em
      
    
  %body
    %h1.title= title
    
    - for quote in quotes
      %div.quote
        .body= quote
        %cite.author
          - if quote.source?
            %a.name{:href => quote.source}= quote.author
          - else
            %span.name= quote.author
      
    .footer
      %p
        %em cf.
        %a{:href => "http://fantasygoat.livejournal.com/"} Pictures I Like For A Variety Of Reasons
        (not by me)
    :plain
      <script type="text/javascript">
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
      </script>
